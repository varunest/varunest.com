      grid-template-columns: 524px 218px 218px;
      grid-template-rows: 387px;
      grid-gap: 49px;
      margin-top: 27px;

      @media SMALL_DESKTOP {
        display: grid;
        grid-template-columns: 308px 129px 129px;
        grid-template-rows: 232px;
        grid-gap: 16px;
        margin-top: 27px;
      }

