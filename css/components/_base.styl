// Variables

// Fonts
$sans-serif = "lato", sans-serif;

// Post width
$fullWidth = 1060px;
$postWidth = 700px;
$postWidthSmall = 600px;

// Media query break points
PHONE = 'only screen and (max-width: 479px)'
TABLET = 'only screen and (min-width: 480px) and (max-width: 800px)'
PHONE_AND_TABLET = 'only screen and (max-width: 800px)'
SMALL_DESKTOP = 'only screen and (min-width: 801px) and (max-width: 1100px)'

// Colors
$red = #E22C29;
$pink = #EB3682;
$darkPink = #c22267;
$white = #FFF;
$lightestGray = #EEE;
$lighterGray = #b7b7b7;
$lightGray = #878787;
$gray = #666;
$darkGray = #4A4A4A;
$darkerGray = #333;
$black = #000;

$bgColor = #FFFFFF;
$adColor = desaturate(darken($bgColor, 3%), 60%);
$adBorderColor = $lightestGray;

.clearfix:before, .clearfix:after
  content: ""
  display: table

.clearfix:after
  clear: both

$link = '&:link, &:visited';
$focus = '&:hover, &:focus, &:active';

// Page structure

html {
  overflow-y: scroll;
}

body {
  background-color: $bgColor;
  position: relative;
  color: $lightGray;
  font-family: $sans-serif;
  -webkit-font-smoothing: antialiased;

  font-size: 16px;
  line-height: 1.5em;
  margin: 0;
  padding: 0;

  @media SMALL_DESKTOP {
    font-size: 16px;
  }
  @media PHONE_AND_TABLET {
    font-size: 16px;
    line-height: 1em;
  }
}

#container {
  margin: 0 auto 0 auto;
  max-width: $fullWidth;
  padding: 0 2%;
  width: 92%;

  @media SMALL_DESKTOP {
    max-width: $postWidthSmall;
  }

  @media PHONE_AND_TABLET {
    max-width: $postWidth;
  } //.home &, .about &, .resume & {
//  max-width: $fullWidth;
//}
}

.left {
  float: left;
  width: 60%;
}

.right {
  float: right;
  width: 35%;
  overflow-x: hidden;
}

.left, .right {
  @media SMALL_DESKTOP {
    float: none;
    width: 100%;
  }
  @media PHONE_AND_TABLET {
    float: none;
    width: 100%;
  }
}

// Typography

a {
  transition: .4s all ease;
  {$link} {
    color: $black;
    text-decoration: none !important;
  }
  {$focus} {
    transition: .4s all ease;
    text-decoration: none !important;
    color: $lighterGray;
  }
}

h1, h2, h3, h4 {
  color: $black;
  line-height: 1.2em;
  font-weight: 800;

  a {
    font-weight: 800;
    {$link} {
      text-decoration: none;
    }
    {$focus} {
      text-decoration: none;
    }
  }
}

h1 {
  font-size: 3em;
  margin: 0.8em 0 0.2em 0;

  @media SMALL_DESKTOP {
    font-size: 2.12em;
  }

  @media PHONE_AND_TABLET {
    font-size: 1.80em;
  }
}

h2 {
  font-size: 1.5em;
  margin: 1.2em 0 0.6em 0;
}

h3 {
  font-size: 1.3em;
  margin: 1.2em 0 0.6em 0;
  color: $lightGray;
}

h4 {
  font-size: 1.1em;
  margin: 1.2em 0 0.6em 0;
  color: $lightGray;
}

.button {
  transition: .4s all ease;
  color: white;
  cursor: pointer;
  margin: auto;
  display: block;
  border: none;
  margin-top: 15px;
  font-size: 1em;
  border-radius: 4px;
  font-weight: 500;
  padding: 13px 15px;
  background: $pink;
  box-shadow: 0px 10px 40px -10px rgba(255, 0, 131, 0.5);

  {$focus} {
    transition: .4s all ease;
    background: $darkPink;
  }

  @media PHONE_AND_TABLET {
    padding: 10px 12px;
  }
}

.postHeader {
  text-align: center;
}

// Links in h1 should not affect style
.content h1 a {
  {$link} {
    color: $black;
    text-decoration: none;
  }
}

p {
  font-size: 1em;
  margin: 1em 0;
  line-height: 1.4em;

  code {
    font-size: 12px;
    background-color: $lightestGray;
    border: 1px solid $lightGray;
    border-radius: 3px;
    padding: 2px 4px;
    white-space: nowrap;
  }
}

blockquote {
  padding: 0.7em 2em;
  border: 1px solid $lighterGray;
  border-left: 8px solid $red;
  background-color: #F7F7F7;
  font-style: italic;
  color: $darkGray;
}

ul {
  margin-top: 0.5em;
  margin-bottom: 1.5em;
}

li {
  margin: 0.3em 0;
}

abbr[title] {
  border-bottom: 1px dotted $lightGray;
  text-decoration: none;
}

// Non-semantic helper classes

.red {
  color: $red;
}

.strong {
  font-weight: bold;
}

// Content

img, iframe, object, embed, audio, video {
  display: block;
  margin: 20px auto;
  max-width: 100%;
}

// Header
#header {
  margin: 0 auto 0 auto;
  max-width: $fullWidth;
  width: 92%;
  position: absolute;

  @media SMALL_DESKTOP {
    max-width: $postWidthSmall;
  }

  @media PHONE_AND_TABLET {
    max-width: $postWidth;
  }

  h1 {
    font-family: $sans-serif;
    font-size: 1.875em;
    font-weight: 800;
    margin: 60px 0 20px 0;
    display: inline-block;
    color: $black;

    a {
      color: $black;

      {$focus} {
        color: $lighterGray;
      }
    }

    @media SMALL_DESKTOP {

    }

    @media PHONE_AND_TABLET {
      display: block;
      text-align center;
      font-size: 2em;
    }
  }

  ul {
    display: inline-block;
    list-style-type: none;
    padding-left: 55px;
    position: relative;
    top: -5px;

    li {
      display: inline-block;
      margin-right: 20px;
      a {
        color: $black;
      }
    }

    @media PHONE_AND_TABLET {
      text-align: center;
      padding-left: 20px;
      display: block;
    }
  }
  .social-links {
    float: right;
    margin-top: 67px;
    padding-left: 0;
    .fab {
      font-size: 1.5em;
      position: relative;
    }

    @media PHONE_AND_TABLET {
      display: none;
    }
    @media SMALL_DESKTOP {
      display: none;
    }
  }

  a {
    transition: .4s all ease;

    {$link} {
      text-decoration: none;
    }
    {$focus} {
      color: $lighterGray;
      transition: .4s all ease;
      text-decoration: none;
    }
  }
}

#header.sticky {
  position: fixed;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 200;
  border-bottom: 1px solid #ececec;

  h1 {
    margin-top: 5px;
    margin-bottom: 2px;
  }

  ul {
    margin-bottom: 2px;
    @media PHONE_AND_TABLET {
      margin-top: 20px;
    }
  }

  .social-links {
    margin-top: 12px;
  }
}

#footer-background {
  img {
    margin: 0;
  }

  .laptop {
    position: absolute;
    bottom: 30px;
    right: 23.59%;
    height: auto;
    width: 29.53%;

  //@media TABLET {
  //  bottom: 20px;
  //}

    @media PHONE_AND_TABLET {
      bottom: 0px;
      width: 250px;
      right: 100px;
    }
  }

  .coffee {
    width: 10%;
    position: absolute;
    bottom: 20px;
    right: 12.23%;

  //@media TABLET {
  //  bottom: 10px;
  //}

    @media PHONE_AND_TABLET {
      bottom: -3px;
      width: 80px;
      right: 20px;
    }
  }

  .lights {
    position: absolute;
    bottom: 380px;
    right: 19.60%;
    width: 17.81%;

    @media SMALL_DESKTOP {
      bottom: 300px;
    } //@media TABLET {
  //  bottom: 210px;
  //}

    @media PHONE_AND_TABLET {
      bottom: 220px;
      width: 150px;
      right: 80px;
    }
  }

  .wall-bg {
    position: absolute;
    bottom: 0px;
    left: 0;
    z-index: 0;
    margin: 0;
    width: 100%;
  }
}

#footer {
  position: relative;
  z-index: 10;
  height: 650px;

  @media TABLET {
    height: 550px;
  }

  @media PHONE {
    height: 550px;
  }

  h1 {
    margin-bottom: 30px !important;
    padding-top: 60px;
  }

  .contact-links {
    margin-top: 30px;
  }
}

// Background shadow
showcaseImage() {
  border-radius: 4px;
  border: 1px solid $lightestGray;
}

// Main image
#main-image {
  animation-name: main-image;
  animation-duration: 1.2s;
}

// Fade animation

.fade {
  opacity: 0;
}

.fade-ani {
  animation-name: fade;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
}

@keyframes main-image {
  from {
    transform: translateY(40px);
    opacity: 0;
  }
  to {
    opacity: 0.9
  }
}

@keyframes fade {
  0% {
    transform: translateY(20px);
    opacity: 0;
  }
  100% {
    opacity: 1
    transform: translateY(0px);
  }
}
