.blog-index {
  .left {

    h2 {
      padding-bottom: 23px;
      margin-top: 35px;
      font-size: 3em;
      margin-bottom: 0px;

      @media PHONE_AND_TABLET {
        font-size: 2em;
        text-align: center;
      }
    }

    .listings {
      border-top: 3px dotted $lighterGray;
      list-style-type none;
      padding-left: 0px;
      margin-top: 0px;

      h3 {
        margin-bottom: 5px;
        display: inline-block;
        line-height: 1.3em;

        a {
          span {
            color: $darkerGray;
          }
        }

        img {
          margin: 2px 5px 3px 2px;
          display: inline-block;
          position: relative;
          width: 22px;
          top: 5px;

          @media SMALL_DESKTOP {
            width: 20px;
          }

          @media PHONE_AND_TABLET {
            width: 18px;
          }
        }
      }

      .continue-reading {
        background: $pink;
        padding: 5px 10px;
        color: white;
        text-decoration: none;
        font-size: .8em;
        border-radius: 5px;

        &:hover {
          box-shadow: 2px 5px 10px $lightPink;
        }
      }

      li {
        margin-top: 5px;
        display: inline-block;

        img {
        float: left;
        margin-right: 20px;
        margin-top: -5px

          @media PHONE_AND_TABLET {
            float: none;
            margin: 20px auto;
          }
        }

        time {
          color: $lightGray;
          display:block;
          margin: 0;
        }

        .tags {
          display: inline-block;
          list-style: none;
          padding-left: 0px;

          li {
            display: inline-block;
          }
        }
      }

    }
  }

  .right {
    overflow-y: hidden;
    h2 {
      padding-bottom: 20px;
      border-bottom: 2px solid $lightestGray;
    }
    .twitter-feed {
      min-height: 500px;
    }

    .copy {
      border-radius: 10px;
      padding: 5px 10px;
      border: solid 1px $lighterGray;
      display: flex;
      font-size: 0.8em;

      #main-image {
        float: left;
        margin-right: 20px;
        border-radius: 50% !important;
        max-width: 100px;
      }
    }
  }
}
