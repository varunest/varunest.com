.blog-index {
  .left {

    h2 {
      padding-bottom: 23px;
      margin-top: 35px;
      border-bottom: 2px solid $lightestGray;

      img {
        margin: 0;
        display: inline-block;
        position: relative;
        width: 30px;
        margin-right: 5px;
        top: 5px;
      }
    }

    .listings {
      list-style-type none;
      padding-left: 0px;
      margin-top: 0px;

      h3 {
        margin-bottom: 5px;
        display: inline-block;
        
        a {
          text-decoration: underline !important;
          text-decoration-style: dashed !important;
          text-decoration-color: $pink !important;
        }
      }

      li {
        margin-top: 5px;
        
        time {
          font-style: italic;
          display:block;
          margin: 0;
        }
      }

    }

  }

  .right {
    overflow-y: auto;
    h2 {
      padding-bottom: 20px;
      border-bottom: 2px solid $lightestGray;
    }
    .twitter-feed {
      min-height: 500px;
    }
  }
}