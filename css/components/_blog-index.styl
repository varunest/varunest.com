.blog-index {
  .left {

    h2 {
      padding-bottom: 23px;
      margin-top: 35px;
      border-bottom: 2px solid $lightestGray;
      font-size: 3em;

      @media PHONE_AND_TABLET {
        font-size: 2em;
      }
    }

    .listings {
      list-style-type none;
      padding-left: 0px;
      margin-top: 0px;

      h3 {
        margin-bottom: 5px;
        display: inline-block;
        line-height: 1.3em;

        a {
          span {
            color: $black;
          }
        }

        img {
          margin: 2px 5px 3px 2px;
          display: inline-block;
          position: relative;
          width: 22px;
          top: 5px;
        }
      }

      .continue-reading {
        &:after {
          content: "â‰«";
          position: absolute;
          margin-left: 3px;
        }
      }

      li {
        margin-top: 5px;

        time {
          color: $lightGray;
          display:block;
          margin: 0;
        }
      }

    }
  }

  .right {
    overflow-y: hidden;
    h2 {
      padding-bottom: 20px;
      border-bottom: 2px solid $lightestGray;
    }
    .twitter-feed {
      min-height: 500px;
    }

    .copy {
      box-shadow: #00000026 0px 0px 7px 0px;
      border-radius: 4px;
      margin: 10px;
      padding: 5px 10px;

      #main-image {
        max-width: 250px;
        border-radius: 50% !important;
			  showcaseImage();
      }

      p {
        padding: 0px 20px;
      }
    }
  }
}